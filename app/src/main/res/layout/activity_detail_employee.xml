<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    tools:context=".Activities.DetailEmployee"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="270dp"
        android:layout_height="225dp"
        android:layout_marginLeft="55dp"
        app:srcCompat="@drawable/edit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="7dp">
        <EditText
            android:id="@+id/txID_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/editName"
            android:layout_width="215dp"
            android:layout_height="40dp"
            android:layout_marginLeft="93dp"
            android:hint="Empleado"
            android:background="@drawable/custom_input"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="8dp"
            />
        <EditText
            android:id="@+id/editSalary"
            android:layout_width="215dp"
            android:layout_height="40dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="20dp"
            android:hint="Salario"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:background="@drawable/custom_input"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/ic_dollar"
            android:drawablePadding="8dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_update"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="93dp"
                android:background="@drawable/custom_button"
                android:text="Editar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_button_delete"
                android:layout_marginLeft="15dp"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>